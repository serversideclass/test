<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Category</th>
      <th>Description</th>
      <th>Price</th>
      <th>Glutenfree</th>
      <th>Icing</th>
      <th>Filling</th>
      <th>Other</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to image_tag(item.image.url, class: 'media-object'), item.image.url, target: '_blank' %></td>
        <td><%= item.title %></td>
        <td><%= item.category %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= item.glutenfree %></td>
        <td><%= item.icing %></td>
        <td><%= item.filling %></td>
        <td><%= item.other %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
