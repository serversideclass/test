<<%= form_for @item, html: { multipart: true } do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@item.errors.count, "error")} prohibited this image from being saved:" %>
      </h2>
      <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
          <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :image_content_type %>
    <%= f.text_field :image_content_type, id: :item_image_content_type %>
  </div>

 <div class="form-group">
    <%= f.label :title %>
    <%= text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, id: :item_title %>
  </div>

  <div class="field">
    <%= f.label :category %>
    <%= f.text_field :category, id: :item_category %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, id: :item_description %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price, id: :item_price %>
  </div>

  <div class="field">
    <%= f.label :glutenfree %>
    <%= f.check_box :glutenfree, id: :item_glutenfree %>
  </div>

  <div class="field">
    <%= f.label :icing %>
    <%= f.check_box :icing, id: :item_icing %>
  </div>

  <div class="field">
    <%= f.label :filling %>
    <%= f.text_field :filling, id: :item_filling %>
  </div>

  <div class="field">
    <%= f.label :other %>
    <%= f.text_field :other, id: :item_other %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
